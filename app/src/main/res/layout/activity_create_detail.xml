<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_margin="15dp"
                                             android:layout_height="match_parent" android:id="@+id/imageview">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="332dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"/>
    <Button
            android:text="OK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button5"
            android:textColor="@android:color/white" android:background="#333333"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/linearLayout">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="409dp"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="247dp"
                tools:layout_editor_absoluteX="0dp">
            <TextView
                    android:text="Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView3" android:textStyle="bold"
                    android:textColor="#666666" android:textSize="24sp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/title" android:lineSpacingExtra="24sp"/>
            <TextView
                    android:text="Details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView4" android:textStyle="bold"
                    android:textColor="#666666" android:textSize="24sp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/content"
                    style="@style/Widget.AppCompat.EditText"/>
            <TextView
                    android:text="Due "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView7" android:textStyle="bold"
                    android:textColor="#666666" android:textSize="24sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="date|datetime|text"
                    android:ems="10"
                    android:id="@+id/due_date"/>
            <Button
                    android:text="Calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/location" android:layout_weight="1"
                    android:background="#666666" android:textColor="@android:color/white"
                    style="@android:style/Widget.Button"/>
            <Space
                    android:layout_width="17dp"
                    android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/space"/>
            <Button
                    android:text="Camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/Camera" android:layout_weight="1"
                    tools:layout_editor_absoluteY="301dp" tools:layout_editor_absoluteX="46dp"
                    android:textColor="@android:color/white" android:background="#666666"
                    style="@android:style/Widget.Button"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
